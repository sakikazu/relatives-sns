<div class="col-sm-7">

<%= link_to '自分の日記へ', blogs_path, class: "btn btn-light" %>
<%= link_to 'この日記を見る', @blog, class: "btn btn-light" %>
<div class="page-header">
  <h3>日記を編集する<%= "<small>#{@page_desc}</small>" if @page_desc.present? %></h3>
</div>
<%#= link_to "画像をアップロードする", new_images_blog_path(@blog.id), class: "btn btn-success" if editable(current_user, @blog.user) %>

<%= render 'form' %>

  <div class="mt50 text-center alert alert-danger">
    <%= link_to '削除', @blog, method: :delete, class: "btn btn-danger", data: {confirm: '本当に削除してもよろしいですか？'} if editable(current_user, @blog.user) %>
  </div>

</div>
