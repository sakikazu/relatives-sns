<h1>ログイン</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <%= f.label "ログインID" %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label "パスワード" %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, "次回から自動的にログインできます(たぶん)" %><br />
  <br />
  <%= f.submit "ログインする" %>
<% end %>
