<%= simple_form_for(@board, :html => form_html_option) do |f| %>
  <% if @board.errors.any? %>
    <p class="alert alert-danger">入力エラーがあります。下記のエラー内容を確認してください。</p>
  <% end %>

  <%= f.input :title, label: "タイトル", input_html: {class: "form-control"} %>
  <%= f.input :description, label: "内容", input_html: {class: "form-control", rows: 7} %>
  <%= f.input :attach, label: "画像", input_html: {class: "form-control"} %>

  <div class="form-actions mt20">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

