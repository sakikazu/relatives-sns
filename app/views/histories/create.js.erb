<% if @history.errors.any? %>
  $('#info')
    .show()
    .html(
      '<%= escape_javascript(render "error") %>'
    )
<% else %>
  $('#history_data').html(
    '<%= escape_javascript(render "data") %>'
  );
  $('#info')
    .show()
    .html('<br><br>追加しました')
    .css({
      'background-color': 'yellow',
      'font-size' : '25px',
      'text-align' : 'center',
    })
    .hide(4000);
  $('#his_form form textarea').val("");
<% end %>
