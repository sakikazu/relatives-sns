<% @updates.each do |up| -%>
  <div class="once_row">
    <div class="bar">
      <span class="name"><%= up.user.dispname if up.user.present? %></span>
      <span class="time"><%= up.updated_at.to_s(:long) if up.updated_at %></span>
    </div>
    <% p up -%>
    <% p up.content -%>
    <% ai = action_info(up) -%>
    <b>[<%= ai[:content_name] %>]<%= ai[:link] %></b>
    <br /><%= ai[:info] %>
  </div>
<% end -%>
