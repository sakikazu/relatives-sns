<div class="row">
  <div class="span7 offset2">

<div class="form-actions">
  <%= link_to 'アルバムに戻る', album_path(@photo.album), class: "btn" %>
</div>

<div class="page-header">
  <h3>写真情報を編集する</h3>
</div>

<div class="mgn-b20">
<%= link_to image_tag(@photo.image(:large)), @photo.image(:original), class: "colorbox" %>
</div>

<%= simple_form_for [@photo.album, @photo] do |f| %>
  <%= f.input :title, label: "タイトル" %>
  <%= f.input :description, label: "概要", input_html: {class: "span5", rows: 5} %>
  <%= f.input :image, as: :file, label: "写真を変更する" %>
  <%#= f.input :exif_at %>
  <%#= f.input :last_comment_at %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
</div>
