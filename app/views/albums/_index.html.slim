- if albums.present?
  #medias.clearfix
    - albums.each do |album|
      .thumb
        .title
          h4
            span.badge.badge-danger
              = fa_icon 'th-large'
            = link_to album.title, album
          .extra
            = fa_icon 'comment', text: album.comments.size
        .image.jthumbnails
          = link_to(image_tag(album.thumb.image(:thumb)), album) if album.thumb.present?
        .info
          div
            |  作成者：
            = album.user.try(:dispname)
            br
            |  作成：
            = time_shorter(album.created_at)
            br
            |  最新アップ：
            = time_shorter(album.sort_at)
        - if editable(current_user, album.user)
          .actions
            = link_to '編集', edit_album_path(album)
            = link_to '削除', album, :method => :delete, data: {confirm: '本当に削除してもよろしいですか？'}
