<script>
  videojs.options.flash.swf = "/assets/video-js/video-js.swf";
</script>

<div class="row">
  <div class="span7 offset2">

<div class="form-actions">
  <%= link_to "動画一覧へ", movies_path, class: "btn" %>
  <%= link_to '編集する', edit_movie_path(@movie), class: "btn btn-info" %>
</div>

<div class="page-header">
  <h3><%= @movie.title %><small><%= link_to "(コメント数：#{@movie.movie_comments.size}）", "#comments" %></small></h3>
</div>

<div class="once_content span7">
  <div class="info">
    作成者:<%= @movie.user.dispname %> | 
    作成日時:<%= @movie.created_at.to_s(:long) if @movie.created_at %>
  </div>
  <div class="description">
    <video id="example_video_1" class="video-js vjs-default-skin" controls preload="none" width="512" height="384"
    poster="<%= @movie.thumb? ? @movie.thumb(:large) : "/assets/movie_thumb.jpg" %>"
    data-setup="{}">
    <source src="/upload/movie/<%= @movie.id %>/original/<%= @movie.movie_file_name %>" type='video/mp4' />
    <!-- キャプション機能
    <track kind="captions" src="demo.captions.vtt" srclang="en" label="English"></track>
    --> <!-- Tracks need an ending tag thanks to IE9 -->
    </video>
    <div class="text"><%= sani_custom_br(@movie.description) %></div>
  </div>
  <div class="nice">
    <span id="update_nice">
      <%= nice_field(@movie, "movie", "#update_nice") %>
    </span>
  </div>
</div>
<div class="clearfix"></div>

<a href="#comment_form" class="btn btn-warning btn-block">ページ最下部へ</a>

<div class="page-header">
  <h3>コメント</h3>
</div>

<div id="comments" class="clearfix">
  <%= render :partial => "comments" %>
</div>

<div id="comment_form">
  <%= form_tag url_for(:action => :create_comment, :movie_id => @movie.id), :remote => true do %>
    <%= text_area_tag :comment, nil, class: "span6", rows: "5", placeholder: "コメントする" %><br />
    <div class="form-actions">
      <%= submit_tag "投稿する", class: "btn btn-primary" %>
    </div>
  <% end -%>
</div>

  </div>
</div>
