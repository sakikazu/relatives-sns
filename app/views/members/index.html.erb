<h1>Listing members</h1>

<table>
  <tr>
    <th>名前</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.fullname, member_path(user) %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_member_path(user) %></td>
    <td><%= link_to 'Destroy', member_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

