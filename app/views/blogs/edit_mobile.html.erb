<%= link_to '自分の日記へ', :action => :index_mobile %> | <%= link_to 'この日記を見る', :action => :show_mobile, :id => @blog.id %>

<% form_for(@blog) do |f| %>

  <p>
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content, "内容" %><br />
    <%= f.text_area :content, :size => "55x20" %>
  </p>
  <p>
    <%= f.submit '更新する' %>
  </p>
<% end %>
