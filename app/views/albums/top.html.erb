<%= link_to '新規作成', new_album_path, class: "btn btn-info" %>

<div class="page-header"><h3>最近アップされた動画<small><%= link_to '動画一覧', movies_albums_path %></small></h3></div>
<div id="movies" class="clearfix">
  <% @movies.each do |movie| %>
    <div class="thumb">
      <div class="title">
        <%= link_to "#{movie.title} (コメント数：#{movie.movie_comments.size})", movie %>
      </div>
      <div class="image"><%= link_to image_tag(movie.thumb(:thumb)), movie_path(movie) %></div>
      <div class="info">
        <div>
          <%= "作成者：#{movie.user.dispname}" %><br><%= "作成日時：#{movie.created_at.to_s(:short2)}" %>
        </div>
        <% if movie.movie_comments.last.try(:created_at) %>
        <div>
          <%= "最新コメント：#{movie.movie_comments.last.created_at.to_s(:short2)}" %>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="page-header"><h3>最近更新されたアルバム<small><%= link_to 'アルバム一覧', albums_path %></small></h3></div>
<div id="album">
<%= paginate @albums, :window => 2, :outer_window => 2 %><br>
<% @albums.each do |album| %>
<div class="once_photo">
  <div class="bar"><%= link_to album.title, album %></div>
  <div class="photo"><%= link_to(image_tag(album.thumb.image(:thumb)), album) if album.thumb.present? %></div>
  <div class="info">
    作成者：<%= album.user.try(:dispname) %><br />
    作成日時：<%= l album.created_at if album.created_at %><br />
    最新アップ日時：<%= l album.sort_at if album.sort_at %>
    <br />
    <% if editable(current_user, album.user) -%>
      <%= link_to '編集', edit_album_path(album) %> | 
      <%= link_to '削除', album, :method => :delete, data: {confirm: '本当に削除してもよろしいですか？'} %>
    <% end -%>
  </div>
</div>
<% end %>
<div class="clear"></div>
<%= paginate @albums, :window => 2, :outer_window => 2 %><br>
</div>

