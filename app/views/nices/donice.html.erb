<script>
$(document).ready(function() {
  //目次を作成する
  $("#mokuji").mokuji();

  //colorbox 再適用
  $(".colorbox").colorbox();
  colorbox_fix_size();
})
</script>

<div id="nice_show" style="width:900px">

<%= render :partial => 'nices_menu' %>


<h1 style="margin-top:45px">＜<%= @user.dispname %>＞がイイネしたもの</h1>

<div id="nice_show_left">

<div id="mokuji"></div>

<h2 class="normal">最近評価したつぶやき</h2>
<%= will_paginate @nices["mutter"], :previous_label=>'&#171;前', :next_label=>'次&#187;', :class => 'flickr_pagination' if @nices["mutter"].present? %>
<div class="h2normal_content">
<% @nices["mutter"].each do |data| -%>
  <div class="nice_content_wrap" id="<%= data.id %>" time="<%= l data.created_at %>">
  <div class="nice_user">イイネした人：<%= "#{data.user.dispname} (#{l data.created_at})" %></div>
  <% obj = data.nice -%>
  <% if obj.blank? -%>
    削除されました.
  <% else -%>
    <ul class="mutter_rows">
      <%= render :partial => 'mutters/mutter_row', :locals => {:mutter_row => obj} %>
    </ul>
  <% end -%>
  <hr>
  </div>
<% end -%>
</div>

<h2 class="normal">最近評価した写真</h2>
<%= will_paginate @nices["albumphoto"], :previous_label=>'&#171;前', :next_label=>'次&#187;', :class => 'flickr_pagination' if @nices["albumphoto"].present? %>
<div class="h2normal_content">
<% @nices["albumphoto"].each do |data| -%>
  <div class="nice_content_wrap" id="<%= data.id %>" time="<%= l data.created_at %>">
  <div class="nice_user">イイネした人：<%= "#{data.user.dispname} (#{l data.created_at})" %></div>
  <% obj = data.nice -%>
  <% if obj.blank? -%>
    削除されました.
  <% else -%>
    <%= link_to(image_tag(obj.attach(:thumb)), slideshow_album_photo_path(obj), {:class => colorbox_fix_size}) if obj.attach?  %><br>
    写真タイトル：<%= obj.title %> / アルバム：<%= link_to obj.album.title, obj.album %>
  <% end -%>
  <hr>
  </div>
<% end -%>
</div>

<h2 class="normal">最近評価した日記</h2>
<%= will_paginate @nices["blog"], :previous_label=>'&#171;前', :next_label=>'次&#187;', :class => 'flickr_pagination' if @nices["blog"].present? %>
<div class="h2normal_content">
<% @nices["blog"].each do |data| -%>
  <div class="nice_content_wrap" id="<%= data.id %>" time="<%= l data.created_at %>">
  <div class="nice_user">イイネした人：<%= "#{data.user.dispname} (#{l data.created_at})" %></div>
  <% obj = data.nice -%>
  <% if obj.blank? -%>
    削除されました.
  <% else -%>
    <% if obj.blog_images.size > 0 -%>
      <% b_image = obj.blog_images.first -%>
      <%= image_tag(b_image.image(:thumb)) if b_image.image? %><br>
    <% end -%>
    日記：<%= link_to obj.title, blog_path(obj) %><br>
    <%= nice_author_and_created_at(obj) %>
  <% end -%>
  <hr>
  </div>
<% end -%>
</div>


<h2 class="normal">最近評価した動画</h2>
<%= will_paginate @nices["movie"], :previous_label=>'&#171;前', :next_label=>'次&#187;', :class => 'flickr_pagination' if @nices["movie"].present? %>
<div class="h2normal_content">
<% @nices["movie"].each do |data| -%>
  <div class="nice_content_wrap" id="<%= data.id %>" time="<%= l data.created_at %>">
  <div class="nice_user">イイネした人：<%= "#{data.user.dispname} (#{l data.created_at})" %></div>
  <% obj = data.nice -%>
  <% if obj.blank? -%>
    削除されました.
  <% else -%>
    動画：<%= link_to obj.title, movie_path(obj) %><br>
    <%= image_tag(obj.thumb(:thumb)) + '<br>' if obj.thumb?  %>
    <%= nice_author_and_created_at(obj) %>
  <% end -%>
  <hr>
  </div>
<% end -%>
</div>


</div> <!-- #nice_show_left -->


<div class="right_side_bar" style="width:180px;margin-top:30px;">
    <p class="title">イイネしたことがある人</p>
    <ul>
    <% @users.each do |user| -%>
      <li><%= link_to user.dispname(User::FULLNAME), donice_nices_path(:user_id => user.id) %></li>
    <% end -%>
    </ul>
</div>

</div> <!-- #nice_show -->
