<script>
  jQuery(document).ready(function(){

    <%
      # bgStretcher用の画像パスの文字列を作る（JSでは配列として扱われる）
      images = []
      Dir.glob("public/files/other/bgstretcher/*").each{|fn|
        if fn =~ /\.jpg$/
          images << fn
        end
      }
      list = ""
      images.each do|i|
        list += "\'#{i.sub("public", "")}\', "
      end
    %>

    // [todo] 前後へのボタンがまだ動いてない
    $('body').bgStretcher({
      images: [<%= list.html_safe %>],
      slideShowSpeed: 'slow',
      nextSlideDelay: 8000,
      buttonPrev: '#prev-btn',
      buttonNext: '#next-btn',
      imageWidth: 1600,
      imageHeight: 1200
    });

  }); // jQuery(document).ready
</script>

