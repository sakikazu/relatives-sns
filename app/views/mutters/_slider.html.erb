<div class="photos-slider sliderkit clearfix" style="border-top:1px solid white">
  <div class="sliderkit-nav">
    <div class="sliderkit-nav-clip">
      <ul>
        <% @slide_photos.each do |thumb| -%>
          <li>
          <%= link_to image_tag(thumb.image(:thumb), :alt => thumb.album.title),
            slideshow_album_photo_path(thumb.album, thumb, top: 1),
            {rel: colorbox_class, :title => "上のリンク先からアルバムが見れます"} if thumb.album.present? %>
          </li>
        <% end -%>
      </ul>
    </div>
    <div class="sliderkit-btn sliderkit-nav-btn sliderkit-nav-prev"><a href="#" title="Scroll to the left"><span>Previous</span></a></div>
    <div class="sliderkit-btn sliderkit-nav-btn sliderkit-nav-next"><a href="#" title="Scroll to the right"><span>Next</span></a></div>
  </div>
</div>

