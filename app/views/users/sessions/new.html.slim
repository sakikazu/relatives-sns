.col-sm-6
  .card.bg-light
    .card-header
      h2
        | ログイン 
        small
          | ログインができない方は和孝に聞いてください
    .card-body
      = simple_form_for(resource_name, :as => resource_name, :url => session_path(resource_name)) do |f|
        .form-inputs
          = f.input :login, :required => false, :autofocus => true, input_html: {class: 'form-control'}, wrapper_html: {class: 'mb15'}
          = f.input :password, :required => false, input_html: {class: 'form-control'}
          = f.input :remember_me, :as => :boolean, input_html: {class: 'form-check_input'}, label_html: {class: 'form-check-label'}, wrapper_html: {class: 'form-check mt15 mb15 pl-0'} if devise_mapping.rememberable?
        .form-actions.mt30
          = f.button :submit, t("helpers.submit.Sign in"), class: 'btn btn-secondary'
      = render "users/shared/links"
