<h1>編集する</h1>

<%= link_to '一覧へ戻る', boards_path %>
<% form_for(@board, :html => {:multipart => true}) do |f| %>

  <p>
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "詳細" %><br />
    <%= f.text_area :description, :size => "70x25" %>
  </p>
  <p>
    <%= f.label :attach, "画像" %><br />
    <%= f.file_field :attach %>
  </p>
  <p>
    <%= f.submit '更新する' %>
  </p>
<% end %>
