<%= link_to "アルバムトップへ", top_albums_path, class: "btn" %>
<%= link_to "新規作成", new_movie_path, class: "btn btn-info" %>

<div class="page-header"><h3>動画一覧</h3></div>
<div class="select_menu clearfix">
  <% [["編集なし動画", 1], ["編集動画", 2]].each do |n, i| -%>
    <% if @sort == i -%>
      <%= link_to n, movies_path(:sort => i), class: "btn btn-danger disabled" %>
    <% else -%>
      <%= link_to n, movies_path(:sort => i), class: "btn btn-danger" %>
    <% end -%>
  <% end -%>
</div>

<%= paginate @movies, window: 2 %>
<div id="movies" class="clearfix">
<% @movies.each do |movie| %>
    <div class="thumb">
      <div class="title">
        <%= link_to "#{movie.title} (コメント数：#{movie.movie_comments.size})", movie %>
      </div>
      <div class="image"><%= link_to image_tag(movie.thumb(:thumb)), movie_path(movie) %></div>
      <div class="info">
        <div>
          <%= "作成者：#{movie.user.dispname}" %><br><%= "作成日時：#{movie.created_at.to_s(:short2)}" %>
        </div>
        <% if movie.movie_comments.last.try(:created_at) %>
          <div><%= "最新コメント：#{movie.movie_comments.last.created_at.to_s(:short2)}" %></div>
        <% end %>
      </div>

      <% if editable(current_user, movie.user) -%>
      <div class="actions">
        <%= link_to '編集', edit_movie_path(movie) %>
        <%= link_to '削除', movie, :method => :delete, data: {confirm: '本当に削除してもよろしいですか？'} %>
      </div>
      <% end -%>
    </div>
<% end %>
</div>
<%= paginate @movies, window: 2 %>

