<%= link_to '自分の日記へ', :action => :index_mobile %> |

<% form_for(@blog) do |f| %>

  <p>
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, :size => "50" %>
  </p>
  <p>
    <%= f.label :content, "内容" %><br />
    <%= f.text_area :content, :size => "55x20" %>
  </p>
  <p>
    <%= f.submit '作成する' %>
  </p>
<% end %>
