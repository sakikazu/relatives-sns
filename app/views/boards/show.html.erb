<%= link_to '一覧へ戻る', boards_path %>

<div id="show_board">
  <p class="bar">
    <span class="title"><%= @board.title %></span>
    <span class="info">
      作成者：<%= @board.user.dispname %><br />
      作成日時：<%= @board.created_at.to_s(:long) if @board.created_at %>
    </span>
  </p>
  <div class="content">
    <%= link_to image_tag(@board.attach(:thumb)), @board.attach(:large), {:class => "colorbox"} if @board.attach? %>
    <p class="text"><%= br auto_link(@board.description) %></p>
  </div>
</div>

<div class="line_width100">
  <a href="#comment_form" class="page_down">ページ最下部へ</a>
</div>

<h3 class="normal">コメント</h3>
<div id="comments">
  <%= render :partial => "comments" %>
</div>

<h3 class="normal">新規コメント</h3>
<div id="comment_form">
<%# form_tag :remote => true, :url => {:action => :create_comment, :board_id => @board.id}, :update => "comments", :condition => "j$('#comment').val() != ''", :complete => "j$('#comment').val('')" do %>
<% form_tag({:action => :create_comment, :board_id => @board.id}, {:multipart => true}) do %>
  <%= text_area_tag :comment, nil, :size => "60x5" %><br />
  <%= file_field_tag :attach %><br />
  <br />
  <%= submit_tag "投稿する" %>
<% end -%>
</div>
