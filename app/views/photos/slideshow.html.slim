.col-sm-12
  - if @from_top_flg
    .well
      - if editable(current_user, @photo.user)
        h3
          | 写真情報の編集
        = form_for @photo, :url => update_from_slideshow_album_photo_path(@photo.album, @photo), :remote => true do |f|
          |  タイトル
          br
          = f.text_field :title, class: 'form-control'
          br
          |  写真の説明
          br
          = f.text_area :description, rows: 5, class: "form-control"
          br
          = f.submit "編集する", class: "btn btn-primary"
          | ※この画像のアップロード者のみ可能 
        #info
        hr
    div[style="text-align:center"]
      div[style="margin:20px;font-size:18px;color:gray"]
        |  アルバム：
        = link_to @photo.album.title, @photo.album

  = render partial: 'show_content', locals: { photo: @photo }

