<script>
  videojs.options.flash.swf = "<%= asset_path('video-js/video-js.swf') %>";
</script>

<div class="row">
  <div class="span7 offset2">

  <%= link_to "動画一覧へ", movies_path, class: "btn" %>
  <%= link_to '編集する', edit_movie_path(@movie), class: "btn btn-info" %>

<div class="page-header">
  <h3><%= @movie.title %><small><%= link_to "(コメント数：#{@movie.movie_comments.size}）", "#comments" %></small></h3>
</div>

<div class="once_content">
  <div class="info">
    作成者:<%= @movie.user.dispname %> | 
    作成日時:<%= @movie.created_at.to_s(:long) if @movie.created_at %>
  </div>
  <div class="description">
    <% if @movie.is_ready? %>
    <video id="example_video_1" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="none" width="100%" height="400"
      poster="<%= @movie.thumb? ? @movie.thumb(:large) : "/assets/movie_thumb.jpg" %>"
      data-setup="{}">
      <source src="<%= @movie.uploaded_full_path.html_safe %>" type='video/mp4' />
    </video>
      <% unless request.smart_phone? %>
      <script>
      $(function() {
      if(!videojs.Flash.isSupported()) {
        var myPlayer = videojs("example_video_1");
        myPlayer.on("click", function() {
          $("#flash_install_message").click();
        });
      }
      })
      </script>
      <% end %>
    <% else %>
      <div class="well">
        ただいま動画準備中（エンコード）です。<br>
        しばらくしてから更新してみてください。
      </div>
    <% end %>
    <div class="text"><%= sani_custom_br(@movie.description) %></div>
  </div>
  <div class="nice">
    <span id="update_nice">
      <%= nice_field(@movie, "movie", "#update_nice") %>
    </span>
  </div>
</div>
<div class="clearfix"></div>

<a href="#comment_form" class="btn btn-warning btn-block">ページ最下部へ</a>

<div class="page-header">
  <h3>コメント</h3>
</div>

<div id="comments" class="clearfix">
  <%= render :partial => "comments" %>
</div>

<div id="comment_form">
  <%= form_tag url_for(:action => :create_comment, :movie_id => @movie.id), :remote => true do %>
    <%= text_area_tag :comment, nil, class: "span7", rows: "5", placeholder: "コメントする" %><br />
    <div class="form-actions">
      <%= submit_tag "投稿する", class: "btn btn-primary" %>
    </div>
  <% end -%>
</div>

  </div>
</div>
