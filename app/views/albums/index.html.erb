<h3 class="normal"><%= link_to '新規作成', new_album_path %></h3>

<h3 class="normal">アルバム詳細一覧 (写真のダウンロードも可能)</h3>
<div id=title_index>
  <%= link_to "表示する", {:controller => :albums, :action => :title_index}, :remote => true %>
</div>

<h3 class="normal">サムネイル一覧</h3>
<%= link_to "最新写真アップ順", :action => :index, :sort => 1 %> |
<%= link_to "アルバム作成順", :action => :index, :sort => 2 %>

<div id="album">
<% @albums.each do |album| %>
<div class="once_album">
  <div class="bar"><%= link_to album.title, album %></div>
  <div class="photo"><%= image_tag album.use1_photo.attach(:thumb) if album.use1_photo %></div>
  <div class="info">
    作成者：<%= album.user.dispname %><br />
    作成日時：<%= album.created_at.to_s(:short2) if album.created_at %><br />
    最新アップ日時：<%= album.sort_at.to_s(:short2) if album.sort_at %>
    <br />
    <% if editable(current_user, album.user) -%>
      <%= link_to '編集', edit_album_path(album) %> | 
      <%= link_to '削除', album, :method => :delete, :confirm => '本当に削除してもよろしいですか？' %>
    <% end -%>
  </div>
</div>
<% end %>
</div>

