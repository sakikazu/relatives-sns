<script type="text/javascript">
  $(document).ready(function(){
      $('table#tablesorter').tablesorter({widgets: ['zebra']});
  });
</script>

<% if current_user.admin? -%>
  <div class="page-header">
    <h3>管理者用</h3>
  </div>
  <%= link_to "[admin]みんなのログイン履歴", login_history_members_path, class: "btn" %>
<% end -%>

<div class="page-header">
  <h3>自分の情報を変更する</h3>
</div>
<%= link_to "自分の情報を変更する", edit_user_registration_path, class: "btn btn-info" %>
<%= link_to "さらに変更する", edit_ex_members_path, class: "btn btn-info" %>

<div class="page-header">
  <h3>みんなの</h3>
</div>
<%= link_to "家系図", relation_members_path, class: "btn btn-warning" %>
<%= link_to "住所を地図で見る", map_members_path, class: "btn" %>
<%= link_to "詳細情報を一覧で見る", all_members_path, class: "btn" %>

<div class="page-header">
  <h3>メンバー一覧 (列のタイトルクリックでソートできます)</h3>
</div>

<table id="tablesorter" class="table table-striped table-bordered table-hover tablesorter">
  <thead>
  <tr>
    <th>name</th>
    <th>自分で設定した名前</th>
    <th>画像</th>
    <th>血液型</th>
    <th>性別</th>
    <th>年齢</th>
    <th>誕生日</th>
    <th>関係する11兄弟</th>
    <th>最終ログイン時間</th>
<% if current_user.admin? -%>
    <th>[admin]ID</th>
    <th>[admin]login name</th>
    <th>[admin]role</th>
<% end -%>
    <th>詳細</th>
  </tr>
  </thead>
  <tbody>
<% @users.each_with_index do |user, idx| -%>
  <tr <%= "class='odd'"if idx%2==1 %>>
    <td><%= user.username %></td>
    <td><%= user.dispname(User::FULLNICK,true) %></td>
    <td><%= link_to image_tag(user.user_ext.image(:small)), user.user_ext.image(:large), {:class => colorbox_class} if user.user_ext.image? %></td>
    <td><%= user.user_ext.blood_name %></td>
    <td><%= user.user_ext.sex_name %></td>
    <td><%= user.user_ext.age_to_s %></td>
    <td><%= user.user_ext.birth_day.to_s(:date) if user.user_ext.birth_day %></td>
    <td><%= user.root11_name %></td>
    <td><%= user.current_sign_in_at.to_s(:long) if user.current_sign_in_at %></td>
<% if current_user.admin? -%>
    <td><%= user.id %></td>
    <td><%= user.username %></td>
    <td><%= user.role_name %></td>
<% end -%>
    <td><%= link_to "見る", member_path(user), class: "btn" %></td>
  </tr>
<% end -%>
  </tbody>
</table>
