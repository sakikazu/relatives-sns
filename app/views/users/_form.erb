<%= form.label :login, "ログインネーム" %><br />
<%= form.text_field :login %><br />
<br />
<%= form.label :password, form.object.new_record? ? nil : "パスワード" %><br />
<%= form.password_field :password %><br />
<br />
<%= form.label :password_confirmation, "パスワード再入力" %><br />
<%= form.password_field :password_confirmation %><br />
<br />
<% ##edit時もこのフォームを使うのでここは管理者のみ %> 
<% if @current_user.admin? -%>
  <%= form.label :role, "権限(管理者のみ)" %><br />
  <%= form.select :role, User::ROLE, :selected => 2 %><br />
  <br />
  <%= form.label :name, "管理用フルネーム(管理者のみ)" %><br />
  <%= form.text_field :name %><br />
<% end -%>
